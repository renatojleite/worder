<div class="container shadow-lg p-3 mb-3 bg-white rounded">
  <div class="card p-5 shadow-lg p-3 mb-3 bg-white rounded">
  <h3 align="center"> Work Order </h3>

      <h4 align="center"><%= @work_order.name %></h4>

          <% if @work_order.priority == 3 %> <p class="btn-danger userbtn" style="font-size: 10px; padding: 2px 15px; border-radius: 5px;">Alta</p>
            <% elsif @work_order.priority == 2 %> <p class="btn-warning userbtn" style="font-size: 10px; padding: 2px 15px; border-radius: 5px;">Media</p>
            <% else %> <p class="btn btn-primary" style="font-size: 10px; padding: 2px 15px; border-radius: 5px;">Baixa</p>
          <% end %>

          <% if @work_order.status == 1 %> <p class="btn-warning userbtn" style="font-size: 10px; padding: 2px 15px; border-radius: 5px;">Aberto</p>
            <% elsif @work_order.status == 2 %> <p class="btn-primary userbtn" style="font-size: 10px; padding: 2px 15px; border-radius: 5px;">Em andamento</p>
            <% else %> <p class="btn btn-success" style="font-size: 10px; color: white; padding: 2px 15px; border-radius: 5px;">Concluido</p>
          <% end %>

      <p align="center" style= "font-size: 0.7em; font-weight: normal;"><%= @work_order.description %></p>
</div>

<div class="container shadow-lg p-3 mb-3 bg-white rounded">
  <h6 align="center"><%= @work_order.address%> </h6>

  <div
    id="map"
    style="width: 100%;
    height: 300px;"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>

<div class="container shadow-lg p-3 mb-3 bg-white rounded">

  <div class="card p-3">

    <%= simple_form_for @work_order do |f| %>

    <h3>Tasks</h3>
    <div id='tasks'>
    <%= f.simple_fields_for :tasks do |task| %>
    <%#= render 'task_fields', :f => task %>
    <div class='nested-fields'>
        <%= task.object.description %>
        <%= task.input :done, :as => :boolean %>
        <%#= link_to_remove_association "remove task", f %>
    </div>

    <% end %>


    <%= f.input :report %>
    <%= f.input :status, collection: { Aberto: 1, "Em Andamento": 2, Concluido: 3 } %>
    <%= f.input :start_photo, input_html: { class: 'hidden' }, label_html: { class: 'upload-photo'}, label: ' ðŸ“· Upload Start Photo', class: "btn-primary" %>
    <%= f.input :end_photo, input_html: { class: 'hidden' }, label_html: { class: 'upload-photo'}, label: ' ðŸ“· Upload End Photo', class: "btn-primary" %>

    <div class="m-5">
    <div class="row justify-content-center">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= f.input :start_photo_cache, as: :hidden %>
    <%= f.input :end_photo_cache, as: :hidden %>
    <% end %>
    </div>
    </div>

   </div>
</div>
