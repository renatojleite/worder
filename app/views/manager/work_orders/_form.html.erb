<%= simple_form_for @work_order, url: manager_work_orders_path do |f| %>
  <!--  NOVO JOB -->
  <%= f.input :name, label: "Novo - Ordem de Serviço" %>


  <!-- INFOS INICIAIS -->
  <%= f.association :team_leader, label: "Alocar a equipe:", label_method: :team_name %>
  <%#= f.association :team_leader, collection: TeamLeader.team_name %>
  <%#= f.association :team_leader, label_method: :leader_name, value_method: :id, include_blank: false %>

  <%= f.input :priority, label: "Prioridade:", collection: { Baixo: 1, Médio: 2, Alto: 3 } %>
  <%= f.input :status, label: "Status :", collection: { Aberto: 1, "Em Andamento": 2, Concluido: 3 } %>
  <%#= f.association :status %>
  <%#= f.association :region %>
  <%= f.input :address, label: "Endereço:", placeholder: 'Inserir endereço Google Maps' %>


  <!-- PRAZO E HR -->
  <%= f.input :due_date, label: "Data Prazo:", as: :date, start_year: Date.today.year, end_year: Date.today.year + 2, order: [:day, :month, :year] %>
  <%= f.input :due_time, label: "Horário aproximado:", as: :time %>


  <!-- DETALHES -->
  <%= f.input :description, label: "Detalhes sobre o serviço:", as: :text %>

    <h3>Tasks</h3>
    <div id='tasks'>
    <%= f.simple_fields_for :tasks do |task| %>
    <%= render 'task_fields', :f => task %>
        <% end %>

     <%#= render 'task_fields', f: task %>
    <div class='links'>
    <%= link_to_add_association 'add task', f, :tasks %>
    </div>
    </div>


  <!-- USER FORM -->
  <%#= f.input :description, as: :text, label: "USER - Observação sobre o serviço realizado" %>


  <%= f.button :submit, class: 'btn btn-primary' %>


<% end %>
