<div class="wrapper">   <!-- Igual ao d-flex -->

  <div id="content">
  <!-- <nav class="navbar navbar-expand-lg navbar-light bg-light"> -->
      <button type="button" id="sidebarCollapse" class="btn btn-info">
      <i class="fas fa-align-left"></i>
      <span>Toggle Sidebar</span>
      </button>
  <!-- </nav> -->
  <%= render 'sidebar' %>
  </div>

  <div class="container-full   content-master">
    <div class="row">
      <div class="col-12">
      <!-- Inicio da 1º coluna -->

      <div>
              <div class="card-dashboard-header">
              <p>WO-index</p>
              <%= link_to "Criar Ordem de Serviço", new_manager_work_order_path, class: "btn btn-primary my-2" %>
              </div>

                <!-- Filtros Work Orders -->
      <div class="card m-2">
      <div class="card-header" style="font-size: 12px;">WO-index</div>
      <div class="card-body">
              <%= form_tag manager_work_orders_path, method: :get do %>
              <div class="search-form-control form-group">
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control string required",
                  placeholder: "Find a team" %>
                <%= submit_tag "Search", class: "btn btn-secondary" %>
                <% end %>
              </div>

              <%= link_to "Limpar", manager_work_orders_path, class: "btn btn-flat" %>



              <span class="card-text d-flex" style="font-size: 10px;">
                   <form action= "work_orders" >
                    <select name="team">
                      <% @team_leaders.each do |team| %>
                        <option value="<%= team.id %>"><%= team.team_name %></option>
                      <% end %>
                    </select>


                    <select name="priority">
                      <% @work_orders_full.pluck(:priority).uniq.each do |work_order| %>
                        <option value="<%= work_order %>"><%= priority_level(work_order) %></option>
                      <% end %>
                    </select>


                    <select name="status">
                      <% @work_orders_full.pluck(:status).uniq.each do |work_order| %>
                        <option value="<%= work_order %>"><%= status_name(work_order) %></option>
                      <% end %>
                    </select>

                    <select name="due_date">
                      <% @work_orders_full.pluck(:due_date).uniq.each do |work_order| %>
                        <option value="<%= work_order %>"><%= work_order %></option>
                      <% end %>
                    </select>

                    <input type="submit" value="Submit">
                  </form>


            </span>

                  <!-- Work Orders index -->
                  <div class="card my-3 style="font-size: 11px; padding: 5p" >
                    <table class="table">
                      <tbody>
                        <% @work_orders.each do |order| %>
                        <tr>
                          <th scope="row" style="font-size: 11px; padding: 5px;"><%= link_to "#{order.name}", manager_work_order_path(order) %></th>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
          </div>
          </div>
        </div>

      <!-- Final da 1º coluna -->
      </div>
</div>
</div>
</div>
</div>






